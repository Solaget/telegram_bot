{
  "compilerOptions": {
    "target": "es2016", // ES6+ compatibility
    "module": "commonjs", // CommonJS module system (suitable for Node.js)
    "rootDir": "./src", // Input directory for TypeScript files
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "esModuleInterop": true, // Enables compatibility for importing ES6 modules in CommonJS
    "forceConsistentCasingInFileNames": true, // Ensures consistent file casing across different platforms
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skips type-checking of declaration files, improving build speed
    "resolveJsonModule": true, // Allows importing JSON files as modules
    "noImplicitAny": true, // Disallows variables with 'any' type, which improves type safety
    "moduleResolution": "node", // Ensures Node.js-style module resolution
    "declaration": true, // Generates .d.ts declaration files for TypeScript types
    "sourceMap": true // Generates source maps for easier debugging
  },
  "include": [
    "src/**/*.ts" // Includes all TypeScript files under 'src'
  ],
  "exclude": [
    "node_modules", // Excludes node_modules directory
    "dist" // Excludes the 'dist' directory to avoid compiling output files
  ]
}
